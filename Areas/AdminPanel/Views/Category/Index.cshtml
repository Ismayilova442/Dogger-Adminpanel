

@model IEnumerable<Category>
@{
    int count = 1;
}
<div class="row">
<div class="col-lg-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category Table</h4>
                <a style="margin-top:20px" class="btn btn-success" asp-action="Create" asp-controller="Category">Create</a>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Count</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Setting</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach(var category in Model)
                            {
                                <tr>
                                    <td>@count</td>
                                    <td>@category.Name</td>
                                    <td>@category.Description</td>
                                    <td>
                                        <a type="button" class="btn btn-danger" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Update</a>
                                        <a type="button" class="btn btn-warning" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id">Delete</a>
                                        </td>
                                </tr>
                                count++;
                            }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
</div>